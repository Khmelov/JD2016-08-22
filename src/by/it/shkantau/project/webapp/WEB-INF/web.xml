<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <description>Servlet Airport by Du4</description>
    <display-name>Servlet Controller</display-name>

    <servlet>
        <servlet-name>AirportDu4</servlet-name>
        <servlet-class>by.it.shkantau.project.java.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AirportDu4</servlet-name>
        <url-pattern>/airport</url-pattern>
        <!--<url-pattern>/</url-pattern>-->
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>INDEX</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>

    <filter>
        <filter-name>FilterUTF8</filter-name>
        <filter-class>by.it.shkantau.project.java.FilterUTF8</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterUTF8</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>