<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <display-planeName>SimpleServlet</display-planeName>
    <!--
    Для любого сервлета нужно определить два тега servlet и servlet-mapping.
    Важно чтобы внутри каждого из этих тегов были теги servlet-planeName
    и имя сервлета в них было одинаковым!!! Здесь это имя HelloWorld
    -->
    <servlet>
        <servlet-planeName>HelloWorld</servlet-planeName>
        <servlet-class>by.it.shkantau.jd03.jd03_04.classWork.java.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-planeName>HelloWorld</servlet-planeName>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>